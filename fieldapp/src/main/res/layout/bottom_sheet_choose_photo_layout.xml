<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:text="@string/use"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_40dp"
        android:background="@drawable/pin_active"
        android:padding="@dimen/_15dp"
        android:src="@drawable/gallery"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cam"
        app:layout_constraintStart_toEndOf="@+id/iv_cam"
        app:layout_constraintTop_toTopOf="@+id/iv_cam"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Gallery"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_gallery"
        app:layout_constraintStart_toStartOf="@+id/iv_gallery"
        app:layout_constraintTop_toBottomOf="@+id/iv_gallery" />

    <ImageView
        android:id="@+id/iv_cam"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pin_active"
        android:padding="@dimen/_15dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:tint="@color/white" />
    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="@string/camera"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_cam"
        app:layout_constraintStart_toStartOf="@+id/iv_cam"
        app:layout_constraintTop_toBottomOf="@+id/iv_cam" />

</androidx.constraintlayout.widget.ConstraintLayout>
