<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clIncompleteReg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tType"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_height="wrap_content"
        android:text="Transaction Type"
        android:textStyle="bold"
        android:textSize="@dimen/_15sp"
        android:layout_marginTop="@dimen/_5dp"
        app:layout_constraintEnd_toStartOf="@+id/tAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textStyle="bold"
        android:textSize="@dimen/_15sp"
        android:layout_marginStart="@dimen/_5dp"
        app:layout_constraintStart_toEndOf="@+id/tType"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="@id/tType"
        app:layout_constraintBottom_toBottomOf="@id/tType"
        tools:text="20000" />
    <TextView
        android:id="@+id/tvChannel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Transaction Date"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintTop_toBottomOf="@id/tType"
        app:layout_constraintStart_toStartOf="@id/tType"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvChannel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvChannel"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginStart="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="@id/tvChannel"
        tools:text="Transaction Date" />
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintEnd_toStartOf="@+id/amount"
        app:layout_constraintTop_toBottomOf="@id/tvChannel"
        app:layout_constraintStart_toStartOf="@id/tType"
        />

    <TextView
        android:id="@+id/amount"
        android:layout_width="0dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAmount"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginStart="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="@id/tvAmount"
        tools:text="Transaction Date" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/grey_100"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAmount"/>

</androidx.constraintlayout.widget.ConstraintLayout>
