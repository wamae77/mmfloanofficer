<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homepage.loans.repaymentSchedule.RepaymentScheduleFragment">

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="0dp"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Repayment Schedule" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kcb_blue"
            android:paddingBottom="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8dp"
                app:cardElevation="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_activeLoan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvAccName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="AC-DAMARIS MUHIA-123456*****77777" />

                    <ImageView
                        android:id="@+id/ivProfilePic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/prof"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tintMode="@color/kcb_blue" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey_100"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAccName" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:text="Loan AccountNumber"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/tvAmountValue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1" />

                    <TextView
                        android:id="@+id/tvAmountValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tvAmount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvAmount"
                        app:layout_constraintTop_toTopOf="@id/tvAmount"
                        tools:text="DAMS" />

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="Amount Applied:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvFrequencyValue"
                        app:layout_constraintStart_toStartOf="@id/tvAmount"
                        app:layout_constraintTop_toBottomOf="@id/tvAmount" />

                    <TextView
                        android:id="@+id/tvFrequencyValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvFrequency"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvFrequency"
                        app:layout_constraintTop_toTopOf="@+id/tvFrequency"
                        tools:text="STANBIC" />

                    <TextView
                        android:id="@+id/tvPeriod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="Amount Disbursed:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvPeriodValue"
                        app:layout_constraintStart_toStartOf="@id/tvAmount"
                        app:layout_constraintTop_toBottomOf="@id/tvFrequency" />

                    <TextView
                        android:id="@+id/tvPeriodValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPeriod"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvPeriod"
                        app:layout_constraintTop_toTopOf="@+id/tvPeriod"
                        tools:text="12345678" />

                    <TextView
                        android:id="@+id/tvLoanBal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="Product Name:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvLoanBalValue"
                        app:layout_constraintStart_toStartOf="@id/tvAmount"
                        app:layout_constraintTop_toBottomOf="@id/tvPeriod" />

                    <TextView
                        android:id="@+id/tvLoanBalValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvLoanBal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvLoanBal"
                        app:layout_constraintTop_toBottomOf="@+id/tvPeriodValue"
                        tools:text="12345678" />

                    <TextView
                        android:id="@+id/tvLoanAccount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="Loan Account No.:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvLoanBalValue"
                        app:layout_constraintStart_toStartOf="@id/tvAmount"
                        app:layout_constraintTop_toBottomOf="@id/tvLoanBal" />

                    <TextView
                        android:id="@+id/tvLoanccountValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvLoanAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvLoanBal"
                        app:layout_constraintTop_toBottomOf="@+id/tvLoanBalValue"
                        tools:text="12345678" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Full"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/_10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llLimit">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRepaymentSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/repayment_schedule_item_list" />
            <LinearLayout
                android:id="@+id/llNoData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_50dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_loan"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_info"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_title_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:gravity="center"
                    android:text="No loan repayment schedule at the moment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_loan" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRefresh"
                    android:layout_width="@dimen/_130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:drawableLeft="@drawable/ic_refresh"
                    android:drawableTint="@color/white"
                    android:drawablePadding="@dimen/_10dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/refresh"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDate" />
            </LinearLayout>

            <include
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/progressbar"
                layout="@layout/simple_progress_bar"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/AppTheme.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/continue_"
            android:visibility="gone"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>