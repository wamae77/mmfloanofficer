<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginTop="@dimen/_20dp"
            android:src="@drawable/cancel"/>
        <TextView
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@+id/ivCancel"
            android:text="@string/account_not_found"/>
        <TextView
            android:id="@+id/tvReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:textAlignment="center"
            android:textSize="@dimen/_17sp"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOne"
            android:text="@string/this_number_is_not_registered_with_moneymart_finance_kindly_contact_the_admin_to_get_started"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTNOK"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45dp"
            android:background="@android:color/transparent"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sp"
            android:layout_marginTop="@dimen/_30dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReg"
            android:layout_marginBottom="@dimen/_5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
