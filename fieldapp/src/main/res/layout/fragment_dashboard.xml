<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.homepage.DashboardFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kcb_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivDashboardLogo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/jiboost_a_foreground"
                app:layout_constraintBottom_toTopOf="@+id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
                app:layout_constraintEnd_toStartOf="@+id/ivProfilePic"
                app:layout_constraintTop_toTopOf="@id/ivProfilePic">

                <ImageView
                    android:id="@+id/ivSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_sync"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tintMode="@color/white" />

                <ImageView
                    android:id="@+id/ivHasLocalData"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/badge_drawable"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/notification"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivOverflow"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/ivOverflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prof"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivProfilePic"
                app:tintMode="@color/white" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="13dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivDashboardLogo"
                tools:text="DAMARIS MUHIA" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvName">

                <!--<com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="130dp" />-->
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/mapView"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="130dp" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="48dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_viewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:text="Teller Account Balances"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cvLoader"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:background="#BFD6F6"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_15dp"
                    app:layout_constraintBottom_toBottomOf="@id/cardBalances"
                    app:layout_constraintEnd_toEndOf="@id/cardBalances"
                    app:layout_constraintStart_toStartOf="@id/cardBalances"
                    app:layout_constraintTop_toTopOf="@+id/cardBalances" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBalances"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:paddingBottom="@dimen/_15dp"
                    app:cardCornerRadius="@dimen/_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_viewPager">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvBalances"
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_3dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_15dp">

                        <TextView
                            android:id="@+id/tvTotalDisb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="10dp"
                            android:text="Total Disbursement"
                            android:textSize="@dimen/_14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/tvDisbValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:gravity="end"
                            android:textSize="@dimen/_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvTotalDisb"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tvTotalDisb"
                            app:layout_constraintTop_toTopOf="@+id/tvTotalDisb"
                            tools:text="5689iirotutuut" />

                        <TextView
                            android:id="@+id/tvRepay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:text="Total Repayment"
                            app:layout_constraintStart_toStartOf="@+id/tvTotalDisb"
                            app:layout_constraintTop_toBottomOf="@+id/tvTotalDisb" />

                        <TextView
                            android:id="@+id/tvRepayValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:gravity="end"
                            app:layout_constraintBottom_toBottomOf="@+id/tvRepay"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tvRepay"
                            app:layout_constraintTop_toTopOf="@+id/tvRepay"
                            tools:text="300000" />

                        <TextView
                            android:id="@+id/tvBal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:text="Actual Balance"
                            app:layout_constraintStart_toStartOf="@+id/tvTotalDisb"
                            app:layout_constraintTop_toBottomOf="@+id/tvRepay" />

                        <TextView
                            android:id="@+id/tvBalValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:gravity="end"
                            app:layout_constraintBottom_toBottomOf="@+id/tvBal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tvBal"
                            app:layout_constraintTop_toTopOf="@+id/tvBal"
                            tools:text="300000" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvBal">

                            <Button
                                android:id="@+id/btnViewBal"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_2dp"

                                android:text="View Balance"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sp"
                                app:layout_constraintEnd_toStartOf="@+id/btn_state"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/btn_state"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_marginStart="@dimen/_2dp"
                                android:layout_marginEnd="@dimen/_15dp"

                                android:text="Statement"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/btnViewBal"
                                app:layout_constraintTop_toTopOf="@+id/btnViewBal" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_track_Incomplete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:gravity="start"
                    android:paddingLeft="@dimen/_10dp"
                    android:textSize="@dimen/_15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_track_Assessment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardBalances"
                    tools:text="3 Incomplete assessment" />

                <TextView
                    android:id="@+id/tv_track_Assessment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:gravity="center"
                    android:textSize="@dimen/_15sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_track_Offline"
                    app:layout_constraintStart_toEndOf="@+id/tv_track_Incomplete"
                    app:layout_constraintTop_toTopOf="@+id/tv_track_Incomplete"
                    tools:text="3 Incomplete assessment" />

                <TextView
                    android:id="@+id/tv_track_Offline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:gravity="start"
                    android:paddingLeft="@dimen/_5dp"
                    android:textSize="@dimen/_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_track_Assessment"
                    app:layout_constraintTop_toTopOf="@+id/tv_track_Incomplete"
                    tools:text="17 Offline Transactions" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLoader"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/cardBalances"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cardBalances">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cardview_image">

                        <com.github.ybq.android.spinkit.SpinKitView
                            android:id="@+id/spinkit"
                            style="@style/SpinKitView.Large.ThreeBounce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            app:SpinKit_Color="@color/colorPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainCard"
                tools:itemCount="2"
                tools:listitem="@layout/fragment_dashboard_items_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainPBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progressBarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#E8FFFFFF"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-5dp"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/load" />

        <TextView
            android:id="@+id/tvWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:elevation="6dp"
            android:text="@string/please_wait"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/check" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>