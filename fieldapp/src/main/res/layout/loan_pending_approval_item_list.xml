<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/requestList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_2dp"
    android:layout_margin="@dimen/_5dp"
    app:cardBackgroundColor="@color/grey2"
    app:cardCornerRadius="@dimen/_5dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/_15dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Cl_loan_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_10dp"
        android:layout_marginTop="@dimen/_1dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_loan"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_margin="1dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_2dp"
            android:background="@color/white"
            android:padding="@dimen/_1dp"
            android:paddingLeft="20dp"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:civ_border_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_loan"
            app:layout_constraintEnd_toEndOf="@+id/iv_loan"
            app:layout_constraintStart_toStartOf="@+id/iv_loan"
            app:layout_constraintTop_toTopOf="@+id/iv_loan"
            tools:text="DM" />

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:textColor="@color/kcb_blue"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:layout_toEndOf="@id/iv_loan"
            app:layout_constraintStart_toEndOf="@id/iv_loan"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Personal Loan" />
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:src="@drawable/ic_edit"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvtitle"
            app:tint="@color/black" />
        <TextView
            android:id="@+id/loanAccNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Loan account number"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvloanAccNo"
            app:layout_constraintStart_toStartOf="@+id/tvtitle"
            app:layout_constraintTop_toBottomOf="@+id/tvtitle"
            />
        <TextView
            android:id="@+id/tvloanAccNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="@string/loan_limit"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@+id/loanAccNo"
            app:layout_constraintTop_toTopOf="@+id/loanAccNo"
            app:layout_constraintBottom_toBottomOf="@+id/loanAccNo"
            />
        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="Amount Applied"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvamount"
            app:layout_constraintStart_toStartOf="@+id/tvtitle"
            app:layout_constraintTop_toBottomOf="@+id/loanAccNo"
           />
        <TextView
            android:id="@+id/tvamount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="@string/loan_limit"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@+id/amount"
            app:layout_constraintTop_toTopOf="@+id/amount"
            app:layout_constraintBottom_toBottomOf="@+id/amount"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="Application Date"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="@+id/tvtitle"
            app:layout_constraintTop_toBottomOf="@+id/amount"
            />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="@string/loan_limit"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="@+id/date"
            app:layout_constraintBottom_toBottomOf="@+id/date"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


