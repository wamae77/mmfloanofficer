<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Sema Electrical"
            android:textColor="@color/text_dashboard"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNatureBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Nature of Business: Electric"
            android:textColor="@color/text_dashboard"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tvBusinessName" />

        <TextView
            android:id="@+id/tvRegisterDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Onboarded on: 2021-08-27 07:36:22.0"
            android:textColor="@color/text_dashboard"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvNatureBusiness" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>