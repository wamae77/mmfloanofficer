<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_30dp"
    android:paddingBottom="@dimen/_30dp">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12dp"
        android:background="@color/kcb_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/kcb_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topView">

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp"
            tools:text="@string/confirm_bill_payment" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_20dp"
        android:text="Amount"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar" />

    <TextView
        android:id="@+id/tvAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_Name"
        tools:text="1200" />

    <TextView
        android:id="@+id/tv_Bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="@string/account_number"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toStartOf="@id/tv_Name"
        app:layout_constraintTop_toBottomOf="@id/tv_Name" />

    <TextView
        android:id="@+id/tv_BankValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Bank"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tv_Bank"
        tools:text="STANBIC" />

    <TextView
        android:id="@+id/tvRecipientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="RECIPIENT NAME"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/_5dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintEnd_toStartOf="@+id/tvRecipientNameValue"
        app:layout_constraintStart_toStartOf="@id/tv_Bank"
        app:layout_constraintTop_toBottomOf="@id/tv_Bank" />

    <TextView
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/tvRecipientNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toEndOf="@id/tvRecipientName"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecipientName"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tvRecipientName"
        tools:text="TOMMY" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvRecipientID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="RECIPIENT ID NUMBER"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toStartOf="@id/tvRecipientName"
        app:layout_constraintTop_toBottomOf="@id/tvRecipientName" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvRecipientIDValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecipientID"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tvRecipientID"
        tools:text="143566472" />

    <TextView
        android:id="@+id/tv_ACNO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="@string/phone_number"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toStartOf="@id/tvRecipientID"
        app:layout_constraintTop_toBottomOf="@id/tvRecipientID" />

    <TextView
        android:id="@+id/tv_ACNOValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ACNO"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tv_ACNO"
        tools:text="12345678" />

    <TextView
        android:id="@+id/tvPayFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="Pay From"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toStartOf="@id/tv_ACNO"
        app:layout_constraintTop_toBottomOf="@id/tv_ACNO" />

    <TextView
        android:id="@+id/tvPayFromValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:maxLines="2"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPayFrom"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tvPayFrom"
        tools:text="12WQ123" />

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="Customer Name"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintStart_toStartOf="@id/tvPayFrom"
        app:layout_constraintTop_toBottomOf="@id/tvPayFrom" />

    <TextView
        android:id="@+id/tvCustomerNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCustomerName"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tvCustomerName"
        tools:text="MUHIA" />

    <TextView
        android:id="@+id/tv_Duty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="excise_duty"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvCustomerName"
        app:layout_constraintTop_toBottomOf="@id/tvCustomerName" />

    <TextView
        android:id="@+id/tv_DutyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Duty"
        app:layout_constraintEnd_toEndOf="@id/tvAmountValue"
        app:layout_constraintTop_toTopOf="@+id/tv_Duty"
        tools:text="TOM" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Duty">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/AppTheme.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3dp"
            android:text="@string/cancel"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_Submit"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_3dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>