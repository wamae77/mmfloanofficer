<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/lightGray"
        android:paddingBottom="5dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/landing_card_radius"
      >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_layout_margin"
         >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgGraduate"
                android:src="@drawable/graduate"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgGraduate"
                android:textSize="@dimen/text_size_large"
                android:text="@string/str_admission_open"
                android:textColor="@color/kcb_blue"
                android:id="@+id/tvAddTitle"
                android:textStyle="bold"/>
            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:id="@+id/vGuideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddContent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAddTitle"
                android:text="@string/str_admission_desc"
                />
            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_layout_margin"
                android:text="@string/btn_enroll_now"
                android:textAlignment="center"
                android:textColor="@color/kcb_blue"
                android:background="@drawable/btn_less_radius"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvAddContent"
                app:layout_constraintEnd_toStartOf="@id/vGuideline"
                app:layout_constraintStart_toStartOf="parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_account"
                android:layout_marginRight="@dimen/medium_layout_margin"
                android:id="@+id/imgAvator"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>