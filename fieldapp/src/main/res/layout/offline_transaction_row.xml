<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="@dimen/_5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clIncompleteReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey2"
        android:paddingBottom="@dimen/_5dp">

        <TextView
            android:id="@+id/tType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Damaris muhia" />

        <TextView
            android:id="@+id/tAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tType"
            app:layout_constraintTop_toTopOf="@id/tType"
            tools:text="20000" />

        <TextView
            android:id="@+id/tvChannel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="@id/tType"
            app:layout_constraintTop_toBottomOf="@id/tType"
            tools:text="12/12/2021" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/tvChannel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvChannel"
            app:layout_constraintTop_toTopOf="@id/tvChannel"
            tools:text="Failed" />

        <TextView
            android:layout_marginStart="@dimen/_15dp"
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="Delete"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_3dp"
            android:layout_marginEnd="@dimen/_7dp"
            android:padding="8dp"
            android:textColor="@color/dark_red"
            android:background="@color/white"
            android:drawablePadding="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/SyncData"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvChannel"
            app:drawableLeftCompat="@drawable/ic_baseline_delete_forever_24" />

        <TextView
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_7dp"
            android:id="@+id/SyncData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_3dp"
            android:background="@color/white"
            android:clickable="true"
            android:drawablePadding="@dimen/_10dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:text="Sync Data"
            android:textColor="@color/kcb_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDelete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            app:drawableLeftCompat="@drawable/ic_baseline_restore_24" />

