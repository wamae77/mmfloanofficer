<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homepage.onboardCustomer.Step2CustomerDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/my_profile"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/money_mart_accent" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="@dimen/_99dp"
                android:layout_height="@dimen/_99dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:scaleType="centerCrop"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_person"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="@color/colorPrimary"
                app:riv_border_width="0dp"
                app:riv_corner_radius="200dp" />
            <TextView
                android:id="@+id/tvLoanOfficerName"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Loan Officer"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ivProfilePic"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/viewLO"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLoanOfficerName"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvChangePin"
                android:textColor="@color/money_mart_accent"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="CHANGE PIN"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/viewLO"
                android:paddingTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/viewChangePin"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvChangePin"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvLogout"
                android:textColor="@color/money_mart_accent"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="LOGOUT"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/viewChangePin"
                android:paddingTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/viewLogout"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorPrimary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include
        android:id="@+id/progressbar"
        android:visibility="gone"
        layout="@layout/simple_progress_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>