<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.main.fragments.LoginFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/kcb_bank_field_agent"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/ivLoginLogo"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:paddingStart="50dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingBottom="30dp"
        android:src="@drawable/ic_mmf_logo_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLogins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_login"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLoginLogo">

        <TextView
            android:id="@+id/helloTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="@string/otp_title"
            android:textAlignment="viewStart"
            android:textColor="@color/kcb_blue"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edtCl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/helloTxt">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp_1"
                style="@style/otpInputCustomWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintEnd_toStartOf="@+id/otp_2"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding ="10dp"
                    android:text="*"
                    android:singleLine="true"
                    android:textColor="#CCE4E4E4"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@drawable/rounded_corners_edittexts"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp_2"
                style="@style/otpInputCustomWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_1"
                app:layout_constraintEnd_toStartOf="@+id/otp_3"
                app:layout_constraintStart_toEndOf="@+id/otp_1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding ="10dp"
                    android:text="*"
                    android:singleLine="true"
                    android:textColor="#CCE4E4E4"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@drawable/rounded_corners_edittexts"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp_3"
                style="@style/otpInputCustomWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_1"
                app:layout_constraintEnd_toStartOf="@+id/otp_4"
                app:layout_constraintStart_toEndOf="@+id/otp_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeThree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding ="10dp"
                    android:text="*"
                    android:singleLine="true"
                    android:textColor="#CCE4E4E4"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@drawable/rounded_corners_edittexts"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp_4"
                style="@style/otpInputCustomWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_1"
                app:layout_constraintEnd_toStartOf="@id/otp_5"
                app:layout_constraintStart_toEndOf="@+id/otp_3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding ="10dp"
                    android:text="*"
                    android:singleLine="true"
                    android:textColor="#CCE4E4E4"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@drawable/rounded_corners_edittexts"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp_5"
                style="@style/otpInputCustomWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_1"
                app:layout_constraintEnd_toStartOf="@id/otp_6"
                app:layout_constraintStart_toEndOf="@+id/otp_4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeFive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding ="10dp"
                    android:text="*"
                    android:singleLine="true"
                    android:textColor="#CCE4E4E4"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@drawable/rounded_corners_edittexts"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp_6"
                style="@style/otpInputCustomWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/otp_5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeSix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:text="*"
                    android:textColor="#CCE4E4E4"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@drawable/rounded_corners_edittexts" />

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend: "
            android:textColor="#707070"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/resendTime"
            app:layout_constraintTop_toBottomOf="@id/edtCl"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/resendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3.0"
            android:textColor="#707070"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito"
            app:layout_constraintStart_toEndOf="@id/resend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtCl"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/AppTheme.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resend"
            android:textSize="14sp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/nunito_semibold"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/progressbar"
        android:visibility="gone"
        layout="@layout/simple_progress_bar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>