<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/requestList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_2dp"
    app:cardBackgroundColor="@color/grey2"
    app:cardCornerRadius="@dimen/_5dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/_10dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Cl_loan_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_loan"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="@dimen/_1dp"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:civ_border_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_loan"
            app:layout_constraintEnd_toEndOf="@+id/iv_loan"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="@+id/iv_loan"
            app:layout_constraintTop_toTopOf="@+id/iv_loan"
            app:layout_constraintVertical_bias="0.543"
            tools:text="DM" />

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_toEndOf="@id/iv_loan"
            app:layout_constraintStart_toEndOf="@id/iv_loan"
            app:layout_constraintEnd_toStartOf="@+id/tvAmountDis"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Personal Loan" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_13sp"
            android:textColor="@color/main_green_color"
            tools:text="@string/loan_limit"
            android:layout_marginEnd="@dimen/_15dp"
            app:layout_constraintEnd_toStartOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="@+id/tvtitle"
            app:layout_constraintTop_toBottomOf="@+id/tvtitle"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tvAmountDis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            tools:text="2000"
            android:gravity="end"
            android:layout_marginEnd="@dimen/_15dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/tvtitle"
            app:layout_constraintTop_toTopOf="@+id/tvtitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvtitle"
            />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            tools:text="2000"
            android:gravity="end"
            android:layout_marginEnd="@dimen/_15dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/tvStatus"
            app:layout_constraintTop_toTopOf="@+id/tvStatus"
            app:layout_constraintBottom_toBottomOf="@+id/tvStatus"
            />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
