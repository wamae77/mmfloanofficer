<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/requestList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_2dp"
    app:cardBackgroundColor="@color/grey2"
    app:cardCornerRadius="@dimen/_5dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/_15dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMileage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivInitials"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_2dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:civ_border_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMileageFromTo" />

        <TextView
            android:id="@+id/initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivInitials"
            app:layout_constraintEnd_toEndOf="@+id/ivInitials"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="@+id/ivInitials"
            app:layout_constraintTop_toTopOf="@+id/ivInitials"
            app:layout_constraintVertical_bias="0.543"
            tools:text="DM" />

        <TextView
            android:id="@+id/tvMileageFromTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:layout_toEndOf="@id/ivInitials"
            app:layout_constraintStart_toEndOf="@id/ivInitials"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Personal Loan" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_13sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/loan_limit"
            app:layout_constraintStart_toStartOf="@+id/tvMileageFromTo"
            app:layout_constraintTop_toBottomOf="@+id/tvVenue"/>
        <TextView
            android:id="@+id/tvVenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5dp"
            android:text="@string/loan_limit"
            app:layout_constraintStart_toStartOf="@+id/tvMileageFromTo"
            app:layout_constraintTop_toBottomOf="@+id/tvMileageFromTo"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
