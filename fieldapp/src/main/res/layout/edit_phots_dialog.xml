<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_20dp">
    <ImageView
        android:id="@+id/ImageCancel"
        android:layout_width="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:src="@drawable/cancel"
        app:tint="@color/black"
        android:layout_height="@dimen/_30dp"/>
    <View
        android:id="@+id/viewB"
        android:layout_width="69dp"
        android:layout_height="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCircleRadius="@dimen/_5dp"
        app:circularflow_defaultRadius="@dimen/_5dp"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@color/text_screens_faint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ImageCancel"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground">
            <ImageView
                android:id="@+id/userLogo"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/rectangle_placeholder_2"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="16:8"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_20dp"
                android:layout_marginTop="@dimen/_70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/userLogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@android:color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:paddingTop="@dimen/_20dp"
                    android:background="#AAFFFFFF">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        tools:text="Title"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvEdit"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/tvEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="EDIT"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_marginStart="@dimen/_20dp"
                        app:layout_constraintStart_toEndOf="@id/tvTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvTitle"
                        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
                        android:textColor="@color/kcb_blue"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

